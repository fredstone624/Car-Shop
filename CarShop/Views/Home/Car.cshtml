@model CarShop.Models.Car

@{
    Layout = "~/Views/MasterView.cshtml";
}

<div class="car-item">
    <div class="car-img">
        <div class="fade">
            <img src="@Model.Preview" alt="@Model.Title">
            @foreach (var img in Model.SubPreview.Split(','))
            {
                <img src="@img" alt="@Model.Title">
            }
        </div>
    </div>
    <div class="car-info">
        <small>@Model.Type</small>
        <h3>@Model.Title</h3>
        <p>@Model.Description</p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Content/js/slick.min.js")

    <script>
        $('.fade').slick({
            dots: true,
            infinite: true,
            speed: 500,
            fade: true,
            cssEase: 'linear',
            adaptiveHeight: true
        });
    </script>
}

@section Styles {
    @Styles.Render("~/Content/css/slick.css")
    @Styles.Render("~/Content/css/slick-theme.css")
}